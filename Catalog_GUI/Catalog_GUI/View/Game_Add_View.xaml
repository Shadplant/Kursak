<Window x:Class="Catalog_GUI.Game_Add_View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Catalog_GUI"
        mc:Ignorable="d"
        Title="Game Add" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="205"/>
        <TextBox HorizontalAlignment="Left" Height="308" Margin="10,48,0,0" TextWrapping="Wrap" Text="{Binding Description}" VerticalAlignment="Top" Width="772"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="246,10,0,0" TextWrapping="Wrap" Text="{Binding Image_Link}" VerticalAlignment="Top" Width="536"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="600,376,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Button_Click"/>
        <Button Content="Accept" HorizontalAlignment="Left" Margin="691,376,0,0" VerticalAlignment="Top" Width="75" Command="{Binding Add_Game_Command}"/>
    </Grid>
</Window>
